# Job Search System - Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_PATH=./data/job_search.db

# Anthropic API (required for LLM extraction)
ANTHROPIC_API_KEY=sk-ant-...

# Scraping Settings (optional - defaults shown)
SCRAPE_DELAY_SECONDS=1.5
SCRAPE_TIMEOUT_SECONDS=30
SCRAPE_MAX_RETRIES=3
SCRAPE_MAX_CONCURRENT=3

# LLM Settings (optional - defaults shown)
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=2000
LLM_COST_LIMIT_DAILY_USD=5.00
LLM_BATCH_SIZE=10

# Scoring Weights (optional - defaults shown, must sum to 1.0)
SCORE_WEIGHT_REQUIRED_SKILLS=0.35
SCORE_WEIGHT_PREFERRED_SKILLS=0.15
SCORE_WEIGHT_SALARY_FIT=0.20
SCORE_WEIGHT_EXPERIENCE_FIT=0.10
SCORE_WEIGHT_CLEARANCE_ELIGIBLE=0.10
SCORE_WEIGHT_REMOTE_FIT=0.10

# Retention Settings (optional)
RETENTION_DAYS=90

# Notifications (optional)
NOTIFICATIONS_ENABLED=false
NOTIFICATION_MIN_SCORE=0.80
NOTIFICATION_MAX_PER_DAY=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
